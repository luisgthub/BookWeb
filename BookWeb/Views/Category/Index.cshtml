@model List<Category>

<div class="container">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>

    <div class="p-2 text-end">
        <a asp-action="Create" class="btn btn-primary">New Category</a>
    </div>
</div>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Order</th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)) {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
                <td>
                <a asp-controller="Category" asp-action="Edit" 
                asp-route-id="@obj.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete"
                       asp-route-id="@obj.Id">Delete</a>
                </td>
        </tr>
        }
    </tbody>
</table>
