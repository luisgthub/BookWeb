
@model List<Product>


    <div class="container">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="p-2 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">New Product</a>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var obj in Model) {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Description</td>
                <td>@obj.Author</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>
                    <a asp-controller="Product" asp-action="Upsert"
                       asp-route-id="@obj.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete"
                       asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
